@model Display.Models.BlogModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*/Blog/Index*@

<!-- duplicated in Registered, extract to partial -->
<body id='subpage'>
    <div class='wrapper'>
        <div id="top">
            @Html.Partial("_Head")
            <div id="main">
                @Html.Partial("_Sidebar", Model.Sidebar)
                <div id="content">
                    @Html.Partial("_Summaries", Model.Posts)
					@{
						const int postsPerPage = 5;
					}
					@if (Model.Count > postsPerPage)
					{
						<div class="pagination">
							<span class="current">1</span> 
							<a class="inactive" href="#">2</a> 
							@if (Model.Count > postsPerPage * 2)
							{
								<a class="inactive" href="#">3</a>
								if (Model.Count > postsPerPage * 3)
								{
									 <a class="inactive" href="#">4</a>
									  if (Model.Count > postsPerPage * 4)
									  {
										  <a class="inactive" href="#">5</a>
									  }
								}
							}
						</div>
					}
                </div>
                <!-- end content -->
            </div>
            <!--end main-->
        </div>
        <!-- end #top -->

    </div><!-- end #wrapper -->

@Html.Partial("_Footer")
</body>
<script type="text/javascript">
    $("#blog").addClass("current");
</script>