@model Display.Models.Post
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body id='subpage'>
    <div class='wrapper'>
        <div id="top">
            @Html.Partial("_Head")
            <div id="main">
                @Html.Partial("_Sidebar")
                <div id="content">
                    <div class='entry blogentry'>
                        <div class="date">
                            <span class='day'>@Model.Day</span> <span class='month'>@Model.Month</span> <span
                                class='year'>@Model.Year</span>
                        </div>
                        <!-- end date -->
                        <h2>
                            @Html.ActionLink(Model.Title, Model.Url)</h2>
                        @Html.Partial("_Tags", Model.Tags)
                        @{
                            var body = Model.Body;
                            var bodyHtml = body.Replace("\r\n", "<br />");
                            @Html.Raw(bodyHtml)
                        }
                    </div> <!--end entry-->

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="edit">
                            @Html.ActionLink("Edit", "Edit", new { objectId = Model.Id}, null)
                        </div>
                    }

                </div> <!-- end content -->
            </div> <!--end main-->
        </div> <!-- end #top -->
    </div> <!-- end wrapper -->
    @Html.Partial("_Footer")
</body>
<script type="text/javascript">
    $("#blog").addClass("current");
</script>
